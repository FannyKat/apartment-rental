%h2=t('devise.registrations.new.sign_up')

= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource

  .field
    .control
      = f.input :email, autofocus: true, autocomplete: "email", input_html: { class: "input", placeholder: "Email" }

  .field
    .control
      - if @minimum_password_length
        %em= t('devise.shared.minimum_password_length', count: @minimum_password_length)
        %br/
      = f.input :password, autofocus: true, autocomplete: "new-password", input_html: { class: "input", placeholder: "Mot de passe" }

  .field
    .control
      = f.input :password_confirmation, autocomplete: "new-password", input_html: { class: "input", placeholder: "Mot de passe" }

  .field
    .control
      = f.submit t('devise.registrations.new.sign_up'), class: 'button is-primary'

= render "devise/shared/links"
