  .field
    .control
      = f.input :location, input_html: { class: 'input', placeholder: 'Localisation' }

  .field
    .control
      = f.input :number_of_bedrooms, input_html: { class: 'input', placeholder: 'Nombre de chambres' }

  .field
    .control
      = f.input :amenities, input_html: { class: 'input', placeholder: 'Ã‰quipements' }

  .field
