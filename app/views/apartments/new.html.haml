.is-flex.is-justify-content-space-around.mt-6
  .card.carousel-card
    .card-header
      .title.is-5.m-4= t('website.title.add_apartment')

    .card-content.m-5
      .content
        = simple_form_for(@apartment) do |f|
          = render "devise/shared/error_messages", resource: @apartment

          = f.input :title, autofocus: true, required: true, input_html: { class: 'input', placeholder: t('simple_form.labels.defaults.title') }

          = f.input :rent_amount, required: true, input_html: { class: 'input', placeholder: t('simple_form.labels.defaults.rent_amount') }
        
          = f.input :location, input_html: { class: 'input', placeholder: t('simple_form.labels.defaults.location') }
        
          = f.input :number_of_bedrooms, input_html: { class: 'input', placeholder: t('simple_form.labels.defaults.number_of_bedrooms') }
        
          = f.input :amenities, input_html: { class: 'input', placeholder: t('simple_form.labels.defaults.amenities') }

          .columns.m-5
            .column
              = f.input :image, as: :file, input_html: { class: 'input' }
            .column
              = f.input :images, as: :file, input_html: { multiple: true, direct_upload: true, class: 'input' }

          .card-footer
            .card-footer-item
              = f.submit t('website.button.to_confirm'), class: 'button has-background-link-light'
            
            .card-footer-item
              = link_to t("website.button.back"), :back, class: "button"