.apartment-card
  .card
    .card-header
      .title.is-5= t('website.title.dispute') @booking.apartment.title

    .container
      .card
        .card-content
          .control
            %strong= t('website.dispute.description')
            = @dispute.description
          .control
            %strong= t('website.dispute.status')
            = @dispute.status
          .control
            %strong= t('website.role.tenant')
            = @booking.tenant.full_name_humanized

            = @dispute.image if @dispute.image.attached?
          .card-footer
            = link_to t("website.button.back"), :back, class: "button"
