    .container
      .card
        .card-content
          = simple_form_for(@dispute, wrapper: :bulma_form) do |f|
            = render "devise/shared/error_messages", resource: @dispute

            = f.hidden_field :booking_id, value: @booking.id

            = f.input :description, autofocus: true, required: true, hint: t('simple_form.input.required'), input_html: { class: 'input', placeholder: t('simple_form.labels.apartment.title') }

            = f.input :image, as: :file, input_html: { class: 'input', placeholder: 'Image' }

            .card-footer
              = f.submit 'Enregistrer', class: 'button has-background-link-light'
              = link_to t("activerecord.back"), :back, class: "button"